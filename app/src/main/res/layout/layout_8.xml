<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="0dip" android:paddingLeft="0dip" android:layout_weight="1"
        android:paddingRight="0dip"
        android:paddingTop="0dip"
        android:paddingBottom="0dip" tools:context=".MainActivity"
        android:id="@+id/top_layout">

        <View
            android:id="@+id/tl_top_square"
            android:layout_width="300dip"
            android:layout_height="100dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@color/bar"/>
        <View
            android:id="@+id/tr_top_square"
            android:layout_width="300dip"
            android:layout_height="100dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@color/bar"/>
        <View
            android:id="@+id/bl_top_square"
            android:layout_width="300dip"
            android:layout_height="100dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/bar"/>
        <View
            android:id="@+id/br_top_square"
            android:layout_width="300dip"
            android:layout_height="100dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/bar"/>
        <View
            android:id="@+id/mid_top_square"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true"
            android:background="@color/foo"/>
    </RelativeLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="0dip"
        android:layout_weight="1" android:background="@color/foo">
        <TextView
            android:text="@string/text_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_1"
            android:textSize="100dp"
            android:paddingLeft="50dp"
            android:gravity="top|left"/>
        <TextView
            android:text="@string/text_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_2"
            android:textSize="100dp"
            android:paddingRight="50dp"
            android:gravity="bottom|right"/>

    </FrameLayout>

</LinearLayout>