<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="100dip"
    android:paddingRight="0dip"
    android:paddingTop="100dip"
    android:paddingBottom="0dip" tools:context=".MainActivity"
    android:id="@+id/testlayout">

    <View
        android:id="@+id/top_box"
        android:layout_height="200dip"
        android:layout_width="400dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/foo"/>

    <TextView
        android:text="@string/text_1"
        android:layout_width="500dip"
        android:layout_height="200dip"
        android:layout_below="@id/top_box"
        android:id="@+id/txt_1"
        android:background="@color/bar"
        android:textSize="100dp"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"/>

    <TextView
        android:text="@string/text_2"
        android:layout_width="400dip"
        android:layout_height="200dip"
        android:layout_below="@id/txt_1"
        android:id="@+id/txt_2"
        android:background="@color/foo"
        android:textSize="100dp"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"/>
    <TextView
        android:text="@string/text_3"
        android:layout_width="500dip"
        android:layout_height="200dip"
        android:layout_below="@id/txt_2"
        android:id="@+id/txt_3"
        android:background="@color/bar"
        android:textSize="100dp"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"/>
    <View
        android:id="@+id/bot_box"
        android:layout_height="200dip"
        android:layout_width="300dip"
        android:layout_below="@id/txt_3"
        android:background="@color/foo"/>

</RelativeLayout>